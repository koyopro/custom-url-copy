{
  "name": "Custom URL Copy",
  "description": "A tool that helps you to copy url and title.",
  "author": "@koyopro",
  "version": "0.1.2",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/16.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [ {
     "js": [ "resources/localstorage.js", "resources/copy.js", "resources/keyboard.js", "resources/content.js" ],
     "matches": [ "http://*/*", "https://*/*" ]
  } ],
  "background": {
     "page": "background.html",
     "persistent": true
  },
  "commands": {
    "markdown_style_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "MacCtrl+Shift+M"
      },
      "description": "Copy title and url by Markdown style"
    },
    "scrapbox_style_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Copy title and url by Scrapbox style"
    },
    "default_style_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Copy title and url by Default style"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "clipboardWrite"
  ],
  "content_security_policy": "default-src 'self'",
  "devtools_page": "popup.html"
}
