{
  "name": "Simple URL Copy [F]",
  "description": "A tool that helps you to copy url.",
  "author": "@ikedaosushi, Misoni, and micelle",
  "version": "2.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/16.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
     "page": "background.html",
     "persistent": true
  },
  "commands": {
    "markdown_style_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "MacCtrl+Shift+M"
      },
      "description": "Copy title and url by Markdown style"
    },
    "scrapbox_style_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Copy title and url by Scrapbox style"
    },
    "default_style_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "Copy title and url by Default style"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "clipboardWrite", "http://*/", "https://*/"
  ],
  "content_security_policy": "default-src 'self'",
  "devtools_page": "popup.html"
}
