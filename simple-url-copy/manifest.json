{
  "name": "Custom URL Copy",
  "description": "A tool that helps you to copy url and title.",
  "author": "@koyopro",
  "version": "0.1.6",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/16.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [ {
     "js": [
       "resources/resources.js",
       "resources/format.js",
       "resources/setting.js",
       "resources/copy.js",
       "resources/keyboard.js",
       "resources/content.js"
     ],
     "matches": [ "http://*/*", "https://*/*" ]
  } ],
  "permissions": [
    "storage",
    "tabs",
    "clipboardWrite"
  ],
  "content_security_policy": "default-src 'self'",
  "devtools_page": "popup.html"
}
